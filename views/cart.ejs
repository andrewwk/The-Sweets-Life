    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
  <!-- Nav bar -->
  <% include ./partials/_navbar %>

  <div class="container order">
    <div class="row">
      <div class="col-12">
        <a href="/user/menu" class="back">‚Üê Keep Shopping</a>
      </div>
    </div>
  </div>

  <div id="footer">
    <form method="POST" action="/order" id="checkout">
      <input type="submit" class="checkout" class="btn btn-primary btn-lg" value="Checkout"></input>
    </form>
    <span class="total">  <i class="fa fa-shopping-cart" aria-hidden="true"></i> Total: $<span id="total"></span></span>
  </div>

  <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
